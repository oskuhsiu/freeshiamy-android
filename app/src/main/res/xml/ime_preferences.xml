<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/settings_name">

    <PreferenceCategory
        android:title="外觀">

        <SeekBarPreference
            android:defaultValue="100"
            android:key="keyboard_height_percent"
            android:max="140"
            android:min="80"
            android:title="鍵盤高度（%）" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="候選">

        <SeekBarPreference
            android:defaultValue="10"
            android:key="candidate_inline_limit"
            android:max="20"
            android:min="5"
            android:title="候選列顯示筆數" />

        <SeekBarPreference
            android:defaultValue="200"
            android:key="candidate_more_limit"
            android:max="500"
            android:min="50"
            android:title="更多列表最大顯示筆數" />

    </PreferenceCategory>
</PreferenceScreen>
