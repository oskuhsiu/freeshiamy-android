<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:title="@string/settings_name">

    <PreferenceCategory
        android:title="外觀">

        <SeekBarPreference
            android:defaultValue="100"
            android:key="keyboard_height_percent"
            android:max="220"
            app:min="90"
            android:title="鍵盤高度（%）" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="swap_delete_apostrophe"
            android:summary="把字母區右側的刪除鍵與「'」鍵互換位置"
            android:title="交換刪除鍵與「'」鍵" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="候選">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="show_shortest_code_hint"
            android:summary="上屏後在候選列右側顯示字根（含反查選字）"
            android:title="提示字根" />

        <SeekBarPreference
            android:defaultValue="10"
            android:key="candidate_inline_limit"
            android:max="20"
            app:min="5"
            android:title="候選列顯示筆數" />

        <SeekBarPreference
            android:defaultValue="200"
            android:key="candidate_more_limit"
            android:max="500"
            app:min="50"
            android:title="更多列表最大顯示筆數" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="隱私">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="disable_ime_in_sensitive_fields"
            android:summary="在密碼欄位或標記為「不允許個人化學習」的欄位，自動切換到其他輸入法（或顯示輸入法選擇器）"
            android:title="在密碼/隱私欄位停用此輸入法" />

    </PreferenceCategory>
</PreferenceScreen>
