<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:title="@string/settings_name">

    <PreferenceCategory
        android:title="外觀">

        <SeekBarPreference
            android:defaultValue="100"
            android:key="keyboard_height_percent"
            android:max="220"
            app:min="90"
            android:title="鍵盤高度（%）" />

        <ListPreference
            android:defaultValue="standard"
            android:entries="@array/keyboard_layout_entries"
            android:entryValues="@array/keyboard_layout_entry_values"
            android:key="keyboard_layout"
            android:title="鍵盤排版"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="show_number_row"
            android:summary="顯示最上方的 1~0 數字列"
            android:title="顯示數字列" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="候選">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="show_shortest_code_hint"
            android:summary="上屏後在候選列右側顯示字根（含反查選字）"
            android:title="提示字根" />

        <SeekBarPreference
            android:defaultValue="10"
            android:key="candidate_inline_limit"
            android:max="20"
            app:min="5"
            android:title="候選列顯示筆數" />

        <SeekBarPreference
            android:defaultValue="200"
            android:key="candidate_more_limit"
            android:max="500"
            app:min="50"
            android:title="更多列表最大顯示筆數" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="隱私">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="disable_ime_in_sensitive_fields"
            android:summary="在密碼欄位自動切換到其他輸入法（或顯示輸入法選擇器）"
            android:title="在密碼/隱私欄位停用此輸入法" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="sensitive_field_include_no_personalized_learning"
            android:summary="部分 App 會在一般文字欄位也設定此旗標；若你遇到鍵盤一直跳走，請關閉此選項"
            android:title="將「不允許個人化學習」視為隱私欄位" />

    </PreferenceCategory>
</PreferenceScreen>
