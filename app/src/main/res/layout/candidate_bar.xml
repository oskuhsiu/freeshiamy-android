<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/candidate_bar_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/candidate_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/candidate_bar_row"
        android:layout_width="match_parent"
        android:layout_height="@dimen/key_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="0dp">

        <TextView
            android:id="@+id/raw_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:textColor="@color/candidate_other" />

        <HorizontalScrollView
            android:id="@+id/candidate_scroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/candidate_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:textColor="@color/candidate_other"
            android:visibility="gone" />

        <Button
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="0dp"
            android:text="â–¼"
            android:textColor="@color/candidate_other" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/more_scroll"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:fillViewport="true"
        android:visibility="gone">

        <GridLayout
            android:id="@+id/candidate_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:padding="8dp" />
    </ScrollView>

</LinearLayout>
